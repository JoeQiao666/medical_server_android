<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_base_title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@color/material_grey_200">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/material_black"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5pt"
            android:layout_height="16pt"
            android:layout_gravity="center_vertical"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="科室"
            android:textColor="@color/material_black"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5pt"
            android:layout_height="16pt"
            android:layout_gravity="center_vertical"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="类型"
            android:textColor="@color/material_black"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5pt"
            android:layout_height="16pt"
            android:layout_gravity="center_vertical"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重量"
            android:textColor="@color/material_black"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5pt"
            android:layout_height="16pt"
            android:layout_gravity="center_vertical"
            android:background="@color/divider" />

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="选择"
            android:textColor="@color/material_black"
            android:textSize="16sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="20pt"
        android:padding="10pt"
        android:src="@mipmap/icon_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:gravity="center_vertical"
        android:paddingLeft="30pt"
        android:paddingRight="30pt">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选择"
            android:textColor="@color/color_666666" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bag_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5pt"
            android:text="@string/bag_count"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5pt"
            android:layout_height="16pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15pt"
            android:background="@color/divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15pt"
            android:text="总重量"
            android:textColor="@color/color_666666" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/total_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5pt"
            android:text="@string/weight"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <View
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="0px"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:text="全选"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:layout_height="match_parent" />
    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="52pt">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/divider"
            android:text="@string/last"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/confirm_in"
            android:textColor="@color/material_white"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>
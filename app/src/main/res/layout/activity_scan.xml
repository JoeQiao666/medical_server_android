<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bingoogolapple.qrcode.zbar.ZBarView
        android:id="@+id/zbarview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="@dimen/dp1"
        app:qrcv_cornerColor="@color/color_7ED321"
        app:qrcv_cornerLength="@dimen/dp20"
        app:qrcv_cornerSize="@dimen/dp3"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_maskColor="@color/material_black50"
        app:qrcv_rectWidth="@dimen/dp220"
        app:qrcv_scanLineColor="@color/colorPrimaryDark"
        app:qrcv_topOffset="@dimen/dp160" />

    <include layout="@layout/include_base_title" />

    <TextView
        android:id="@+id/scan_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp390"
        android:text="@string/scan_hint"
        android:textColor="@color/material_white50"
        android:textSize="@dimen/sp10" />

    <TextView
        android:id="@+id/input_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/input_bind"
        android:layout_marginTop="@dimen/dp23"
        android:paddingStart="@dimen/dp30"
        android:paddingEnd="@dimen/dp15"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dp20"
        android:paddingTop="@dimen/dp10"
        android:drawableEnd="@mipmap/icon_enter_white"
        android:paddingBottom="@dimen/dp10"
        android:layout_below="@+id/scan_hint"
        android:textColor="@color/material_white"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/open_flash"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp44"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/dp32"
        android:src="@color/material_black"
        android:layout_height="@dimen/dp32" />
</RelativeLayout>